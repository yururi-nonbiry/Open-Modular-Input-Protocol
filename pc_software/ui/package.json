{
  "name": "omip-app",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "public/electron.cjs",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:react\" \"npm:dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "node -e \"setTimeout(() => {}, 5000)\" && electron .",
    "build": "node scripts/build.cjs",
    "rebuild": "electron-rebuild",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "active-win": "^8.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "robotjs": "^0.6.0",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "electron": "^38.2.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.github.yourname.omip",
    "productName": "Open Modular Input Protocol",
    "files": [
      "build/**/*",
      "public/electron.cjs",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "../venv",
        "to": "venv"
      },
      {
        "from": "../main.py",
        "to": "main.py"
      },
      {
        "from": "../omip_pb2.py",
        "to": "omip_pb2.py"
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      }
    ],
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
